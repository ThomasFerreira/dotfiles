# i3 config file (v4)
set $mod Mod4

floating_modifier $mod

font pango:Inconsolata 10

bindsym $mod+q exec emacs
bindsym $mod+g exec urxvt

bindsym $mod+h exec rofi -show combi

bindsym $mod+Shift+period kill

bindsym $mod+t focus left
bindsym $mod+s focus down
bindsym $mod+d focus up
bindsym $mod+r focus right

bindsym $mod+Shift+t move left
bindsym $mod+Shift+s move down
bindsym $mod+Shift+d move up
bindsym $mod+Shift+r move right

bindsym $mod+o split v
bindsym $mod+comma split h

bindsym $mod+a fullscreen toggle
bindsym $mod+u layout stacking
bindsym $mod+i layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+quotedbl workspace 1
bindsym $mod+guillemotleft workspace 2
bindsym $mod+guillemotright workspace 3
bindsym $mod+parenleft workspace 4
bindsym $mod+parenright workspace 5
bindsym $mod+at workspace 6
bindsym $mod+plus workspace 7
bindsym $mod+minus workspace 8
bindsym $mod+slash workspace 9
bindsym $mod+asterisk workspace 10

bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

mode "Resize" {
  bindsym t resize shrink width 10 px or 10 ppt
  bindsym d resize grow height 10 px or 10 ppt
  bindsym s resize shrink height 10 px or 10 ppt
  bindsym r resize grow width 10 px or 10 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+agrave mode "Resize"

set $mode_system System: (h) halt, (r) reboot, (i) i3 reload, (y) i3 restart
mode "$mode_system" {
    bindsym h exec --no-startup-id systemctl poweroff, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym i exec --no-startup-id sh -c '. ~/.config/x_profile/i3_config && i3-msg reload', mode "default"
    bindsym y  exec --no-startup-id sh -c '. ~/.config/x_profile/i3_config && i3-msg restart', mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"



client.background #1C1E23

client.focused #5781FF #393C45 #B3B6C1 #5781FF #393C45
client.focused_inactive #9297A6 #393C45 #B3B6C1 #9297A6 #393C45
client.unfocused #393C45 #1C1E23 #9297A6 #393C45 #393C45
client.urgent #FF4757 #1C1E23 #B3B6C1 #FF4757 #393C45

client.placeholder #000000 #1C1E2 #B3B6C1 #000000 #393C45

bar {
  status_command i3status --config ~/.config/i3/i3status.conf

  colors {
      background #1C1E23
      statusline #B3B6C1
      separator #B3B6C1

      focused_workspace #5781FF #393C45 #B3B6C1
      active_workspace #AF3EFF #393C45 #9297A6
      inactive_workspace #9297A6 #393C45 #9297A6
      urgent_workspace #FF4757 #393C45 #9297A6
      binding_mode #FF4757 #393C45 #FF4757
  }
}



workspace_layout tabbed

for_window [class="^(pinentry|Pinentry)"] floating enable
for_window [window_role="About"] floating enable

for_window [class=".*"] title_format "<b> %title </b>"

exec_always --no-startup-id xsetroot -solid "#1C1E23"
exec_always --no-startup-id dex -a
exec_always --no-startup-id numlockx on
